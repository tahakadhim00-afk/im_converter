{
  "name": "im-converter",
  "version": "1.0.0",
  "description": "A clean, cross-platform desktop image converter focused on fast and reliable format conversion.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "heic-convert": "^2.1.0",
    "sharp": "^0.33.5"
  },
  "build": {
    "appId": "com.imconverter.app",
    "productName": "IM Converter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
